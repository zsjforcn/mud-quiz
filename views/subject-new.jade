extends layout/default

block content

    include mods/head
    // main {{

    div(class="main")
        div(class="container")
            div(class="row")
                div(class="alert alert-info")
                    button(type="button", class="close", data-dismiss="alert") &times;
                    h4 创建新试题
                form(class="form-horizontal", action="/subject", method="post")
                    div(class="control-group")
                        label(class="control-label", for="J_Q_title") 问题：
                        div(class="controls")
                            textarea(id="J_Q_title", rows=3, class="span8", placeholder="题干（必须）", name="q-question", required)
                    div(class="control-group")
                        label(class="control-label", for="J_Q_code")
                        div(class="controls")
                            textarea(id="J_Q_code", rows=8, class="span8", placeholder="代码（可选）", name="q-code")
                    div(class="control-group")
                        label(class="control-label") Tag:
                        div(class="controls")
                            label(class="checkbox inline")
                                input(type="checkbox", value="javascript", name="q-tag[]")
                                | javascript
                            label(class="checkbox inline")
                                input(type="checkbox", value="html", name="q-tag[]")
                                | html
                            label(class="checkbox inline")
                                input(type="checkbox", value="css", name="q-tag[]")
                                | css
                    div(class="control-group")
                        label(class="control-label", for="J_A_title") 答案：
                        div(class="controls")
                            textarea(id="J_A_title", rows=3, class="span8", placeholder="答案（必须）", name="a-answer", required)
                    div(class="control-group")
                        label(class="control-label", for="J_A_code")
                        div(class="controls")
                            textarea(id="J_A_code", rows=8, class="span8", placeholder="代码（可选）", name="a-code")
                    div(class="form-actions")
                        button(type="submit", class="btn btn-primary") 创建试题
    // main }}

    include mods/foot